<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/default_grey_color"
    android:layout_width="match_parent"
    android:layoutDirection="rtl"
    android:layout_height="wrap_content">


    <LinearLayout
        android:background="@drawable/yellow_back_border"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dish_image_itemsBagDetails"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:srcCompat="@tools:sample/avatars" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dish_name_itemsBagdetails_textView"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingTop="10dp"
                android:gravity="right"
                 android:fontFamily="@font/stv_bold"
                android:text="TextView"
                android:textColor="@color/black_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="2dp"
                     android:fontFamily="@font/stv_bold"
                    android:text="@string/count_items_bag_details"
                    android:textColor="@color/black_color"
                    android:textSize="16sp"
                    />
                <ImageView
                    android:id="@+id/minus_itemsBag_imageView"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="2dp"
                    app:srcCompat="@drawable/ic_remove_circle" />
                <TextView
                    android:id="@+id/count_dishes_itemsBagdatails"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                     android:fontFamily="@font/stv_bold"
                    android:text="0"
                    android:layout_gravity="center"
                    android:textColor="@color/black_color"
                    />
                <ImageView
                    android:id="@+id/plus_itemsBag_imageView"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="2dp"
                    app:srcCompat="@drawable/ic_add" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/price_items_fragment_order"
                    android:textColor="@color/black_color"
                     android:fontFamily="@font/stv_bold"
                    android:textSize="16sp"
                  />
                <TextView
                    android:id="@+id/price_itemsBagDetails_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_gravity="center"
                     android:fontFamily="@font/stv_bold"
                    android:text="0"
                    android:textColor="@color/black_color"
                  />
            </LinearLayout>
            <Button
                android:id="@+id/delete_button_itemsBagDetails"
                android:layout_width="70dp"
                android:layout_height="30dp"
                 android:fontFamily="@font/stv_bold"
                android:background="@drawable/yellow_color_rectangle"
                android:text="@string/remove_itemsBagDetails"
                android:textColor="@color/white_color"
                android:textSize="16sp"
                android:layout_gravity="left"
                />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>